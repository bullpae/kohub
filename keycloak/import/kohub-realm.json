    {
      "clientId": "termix",
      "enabled": true,
      "publicClient": false,
      "secret": "termix-secret",
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "webOrigins": [
        "http://localhost:8080"
      ]
    }
  ],
